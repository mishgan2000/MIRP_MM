#include <stdint.h>;
#include <stdio.h>;
#include "xparameters.h";

#define ddd *((volatile uint32_t *)(XPAR_MIKE_IP_0_BASEADDR))
int main(void){
uint32_t temp = 0, c0 = 0, c1 = 0, c2 = 0, c3 = 0;
uint8_t i;
	while(1){

		temp = ddd;
		if(temp == 0)
			c0++;
			//for(i = 0; i < 10; i++) {}
		else if(temp == 1)
			c1++;
			//for(i = 0; i < 20; i++) {}
		else if(temp == 2)
			c2++;
			//for(i = 0; i < 30; i++) {}
		else if(temp == 3)
			c3++;
			//for(i = 0; i < 40; i++) {}


	}
}
